<%= form_for @blog do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title of your blog" %>

    <%= f.text_area :content, class: "wysihtml5", rows: 8,
          placeholder: "Your content goes here" %>

    <%= f.label :tag_names %>
    <%= f.text_field :tag_names, placeholder: "Seperate tags by commas" %>

  <%= f.submit "Post Blog", class: "btn btn-success" %>
<% end %>

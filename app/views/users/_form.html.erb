<%= form_for @user do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>

  <%= f.submit "Save changes", class: "btn btn-success" %>
<% end %>
